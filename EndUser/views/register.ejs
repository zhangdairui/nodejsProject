<script>


$("input[type=password]").keyup(function() {
            if ($("#password1").val() != "" || $("#password2").val() != "") {
                if ($("#password1").val() == $("#password2").val()) {

                    $("#pwmatch").css("display", "none");
                    $("#btn-signup").attr('disabled', false);

                } else {
                    $("#pwmatch").css("display", "block");
                    $("#btn-signup").attr('disabled', 'disabled');
                }
            }
        });
</script>